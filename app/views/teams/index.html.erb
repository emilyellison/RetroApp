<div class='row'>
	<div class='span12'>
		<h1 class='pull-left'>Teams</h1>
		<p class='pull-right'><%= link_to 'Add a Team', new_team_url, class: 'btn btn-primary' %></p>
	</div>
</div>
<ul>
<% @teams.each do |team| %>
	<li>
	<%= link_to team.name, team_url(team) %>
	| <%= link_to 'Edit', edit_team_url(team) %>
	| <%= link_to 'Destroy', team_url(team), method: :delete, data: { confirm: 'Are you sure you want to delete your team?' } %>
	</li>
<% end %>
</ul>